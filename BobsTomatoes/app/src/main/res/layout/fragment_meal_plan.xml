<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MealPlanFragment">

    <TextView
        android:id="@+id/recipe_textview_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/selectRecipes"
        android:textColor="@color/black"
        android:textAlignment="center" />

    <ListView
        android:id="@+id/recipe_listview_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="100" />

    <TextView
        android:id="@+id/ingredient_textview_id"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:paddingTop="15dp"
        android:text="@string/selectIngredients"
        android:textColor="@color/black"
        android:textAlignment="center" />

    <ListView
        android:id="@+id/ingredient_listview_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="100" />



</LinearLayout>